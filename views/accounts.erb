<% @accounts.each do |account| %>
<div class="container">
  <div class="row">
    <div class="col s12">
      <h3><%= account["name"] %></h3>
      <table id="table_id" class="display">
          <thead>
              <tr>
                  <th>Envelope <span class="secondary-content"><i class="mdi-content-sort"></i></span></th>
                  <th>Balance <i class="mdi-content-sort right"></i></th>
              </tr>
          </thead>
          <tfoot>
              <tr>
                  <th colspan="4" style="text-align:right">Total:</th>
                  <th></th>
              </tr>
          </tfoot>
          <tbody>
              <% account.envelopes.each do |envelope| %>
              <tr>
                  <td><%= envelope["name"] %></td>
                  <td><%= envelope["balance"] %></td>
              </tr>
              <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>
<% end %>

